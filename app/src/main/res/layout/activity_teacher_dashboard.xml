<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="35dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNextClasses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplaints"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/dark_green"
            android:text="Complaints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/info_color"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Grade" />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTeacherTimetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/primary_light"
        android:textColor="@color/white"
        android:text="Timetable" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAllClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="#E1ECFF"
        android:textColor="@color/black"
        android:text="All Classes"
        android:layout_marginTop="8dp" />



</LinearLayout>