<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textMatiere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathématiques"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Notes : contrôle, examen, participation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textControle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrôle : 15.5"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textExamen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen : 14.0"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textParticipation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participation : 16.0"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textMoyenne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Participation : 16.0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Étudiant -->
        <TextView
            android:id="@+id/textEtudiant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="ÉTUDIANT : Sara El Malki"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/darker_gray" />

        <!-- Date -->
        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouté le : 03/06/2025"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
